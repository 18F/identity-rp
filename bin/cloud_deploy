#!/bin/bash

if [ $# -ne 1 ]
then
	echo 'Usage: cloud_deploy [environment]'
	exit 1
fi

if [ $1 != 'dev' -a $1 != 'demo' ]
then
	echo 'you must specify either dev or demo'
	exit 1
fi

cf target -o consumer-identity -s dev
echo setting up identity-rp-$1
cf set-env identity-rp-$1 SAML_ENV $1
cf push identity-rp-$1
