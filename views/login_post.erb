<form id="saml-form" action="<%= login_url %>" method="post">
  <% post_params.each do |p, v| %>
    <input name="<%= p %>" type="hidden" value="<%= v %>" />
  <% end %>
  <input type="submit" />
</form>

<script>
  console.log("Going to submit the form via POST!!!");
  document.getElementById("saml-form").submit();
  console.log("    DONE submitting the form!!!");
</script>